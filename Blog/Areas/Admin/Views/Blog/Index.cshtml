@using Blog.ViewModels.Blog;
@model IEnumerable<BlogListItemVM>
@{
    ViewData["Title"] = "Index";
}

<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Descriptions</th>
                    <th>Image</th>
                    <th>Start date</th>
                    <th>Author</th>
                    <th>Actions</th>
                </tr>
            </thead>

            @foreach(var item in Model)
            {
                <th>@item.Id</th>
                <th>@item.Title</th>
                <th>@item.Descriptions</th>
                <th><img width="200" src="~/@item.ImgFile" /></th>
                <th >@item.CreateAt</th>
                <th>@item.Author</th>
                <th class="text-center">
                    <td class="text-center"><a asp-controller="Blog" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                    <td class="text-center"><a asp-controller="Blog" asp-action="Update" asp-route-id="@item.Id">Update</a></td>

                </th>
               
            }
        </table>
    </div>
</div>
